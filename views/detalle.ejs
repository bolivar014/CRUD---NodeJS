<%- include("template/cabecera", { tituloWeb: 'Detalle de mascota' }) %>
<body>
    <div class="container">
        <h1>Detalle de mascota</h1>

        <% if (error) { %>
            <p>
                <%= mensaje %>
            </p>
            <a href="/mascotas" class="btn btn-dark btn-block">Volver a Mascotas</a>
        <% } %>

        <% if (!error) { %>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Descripci贸n</th>
                        <th scope="col">Acci贸n</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th scope="row"><%= mascota.id %></th>
                        <td><%= mascota.nombre %></td>
                        <td><%= mascota.descripcion %></td>
                        <td>
                            <button class="btn btn-danger btn-sm" id="btnEliminar" data-id="<%= mascota.id %>">
                                Eliminar
                            </button>
                        </td>
                    </tr>
                </tbody>
            </table>
        <% } %>
    </div>
    <!-- LINK FOOTER -->
    <%- include("template/footer") %>
    <script>
        // Configuramos evento QuerySelector en los botones de eliminar
        const btnEliminar = document.querySelector('#btnEliminar');

        // Evento de escucha para los botones de eliminar
        btnEliminar.addEventListener('click', async () => {
            // console.log('me diste click');
            
            // Obtenemos el data-id del bot贸n al cual se dio click 
            const id = btnEliminar.dataset.id;
            
            try {
                // Generamos petici贸n await para eliminar mascota
                const data = await fetch(`/mascotas/${id}`, {
                    method: 'delete'
                });

                // Obtenemos la respuesta enviada desde el servidor
                const resp = await data.json();

                console.log(resp);

                if(resp.estado) {
                    window.location.href = '/mascotas';
                } else {
                    console.log(resp);
                }
            } catch (error) {
                console.log('error - Eliminar Mascota');
                console.log(error);
            }
        })

    </script>